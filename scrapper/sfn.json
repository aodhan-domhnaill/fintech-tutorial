{
    "StartAt": "CallLambda",
    "States": {
        "CallLambda": {
            "Type": "Task",
            "Resource": "arn:aws:states:::lambda:invoke",
            "Parameters": {
                "FunctionName": "arn:aws:lambda:us-east-1:123456789012:function:function",
                "Payload": {
                    "a": "b"
                }
            },
            "Catch": [
                {
                    "ErrorEquals": [
                        "States.ALL"
                    ],
                    "Next": "EndState"
                }
            ],
            "Next": "Wait"
        },
        "Wait": {
            "Type": "Wait",
            "Seconds": 3,
            "Next": "CallLambda"
        },
        "EndState": {
            "Type": "Pass",
            "End": true
        }
    }
}